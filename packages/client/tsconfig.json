{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "./dist",
    "paths": {
      "@shared/types": [
        "../types/dist"
      ],
      "@shared/utils": [
        "../utils/dist"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}